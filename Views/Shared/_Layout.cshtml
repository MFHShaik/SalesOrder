<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SalesOrders</title>

    <!-- Bootstrap and Bootstrap Icons -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/SalesOrders.styles.css" asp-append-version="true" />

    <style>
        /* Ensure the entire body takes up the full height */
        html, body {
            height: 100%;
        }

        /* Flexbox container that ensures footer stays at the bottom */
        body {
            display: flex;
            flex-direction: column;
            justify-content: space-between;
        }

        /* Navbar Styling with z-index to ensure it's always on top */
        .navbar {
            background-color: #343a40; /* Dark background */
            z-index: 1050; /* Ensure the navbar stays above other content */
            position: relative;
        }

            .navbar .navbar-brand,
            .navbar .nav-link {
                color: #ffffff; /* Light text for contrast */
            }

                .navbar .nav-link:hover {
                    color: #f8f9fa; /* Slight hover effect */
                }

        /* Footer Styling */
        .footer {
            background-color: #212529; /* Darker footer */
            color: #ffffff;
            padding: 20px 0;
            position: relative;
            bottom: 0;
            width: 100%;
        }

            .footer a {
                color: #f8f9fa;
            }

                .footer a:hover {
                    color: #adb5bd; /* Soft hover color */
                }

        /* General Styling */
        .container {
            margin-top: 20px;
            flex-grow: 1;
        }

        h2 {
            font-weight: bold;
        }

        /* Button Styling */
        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        /* Align account icon to the right */
        .navbar-nav.ms-auto {
            margin-left: auto;
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-cart3"></i> SalesOrders
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Products" asp-action="Index"><i class="bi bi-box-seam"></i> Products</a>
                        </li>

                        <!-- Orders Dropdown Menu -->
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="ordersDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-basket2"></i> Orders
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="ordersDropdown">
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Index"><i class="bi bi-basket2"></i> View Orders</a></li>
                                <li><a class="dropdown-item" asp-controller="Orders" asp-action="Create"><i class="bi bi-plus-circle"></i> Create Order</a></li>
                                <li><a class="dropdown-item" asp-controller="OrdersProduct" asp-action="Index"><i class="bi bi-cart4"></i> Order Products</a></li>
                            </ul>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a>
                        </li>
                    </ul>

                    <!-- Account icon with Sign out -->
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                <i class="bi bi-person-circle"></i> Account
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="accountDropdown">
                                <li>
                                    <form asp-controller="Account" asp-action="SignOut" method="post" class="dropdown-item">
                                        @Html.AntiForgeryToken()
                                        <button type="submit" class="btn btn-link"><i class="bi bi-box-arrow-right"></i> Sign Out</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <!-- Main Content Area -->
    <div class="container">
        @RenderBody()
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
