@model List<SalesOrders.Models.Product>

@{
    ViewData["Title"] = "Product List";
}

<h2 class="text-center mb-5">List of Products</h2>

<div class="container">
    <div class="mb-3">
        <a asp-controller="Products" asp-action="Create" class="btn btn-primary">Create New Product</a>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="table-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Product Code</th>
                <th scope="col">Name</th>
                <th scope="col">Description</th>
                <th scope="col">Product Type</th>
                <th scope="col">Cost Price</th>
                <th scope="col">Sales Price</th>
                <th scope="col">Staff Discounted Price</th>
                <th scope="col">Stock Quantity</th>
                <th scope="col">Created At</th>
                <th scope="col">Updated At</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Id</td>
                    <td>@product.ProductCode</td>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.ProductType</td>
                    <td>@product.CostPrice.ToString("C")</td>
                    <td>@product.SalesPrice.ToString("C")</td>
                    <td>@product.StaffDiscountedPrice.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>@product.CreatedAt.ToString("g")</td>
                    <td>@product.UpdatedAt.ToString("g")</td>
                    <td>
                        <a asp-controller="Products" asp-action="Edit" asp-route-id="@product.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-controller="Products" asp-action="DeleteProduct" asp-route-id="@product.Id" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this product?');">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
