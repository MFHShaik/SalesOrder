@model IEnumerable<SalesOrders.Models.OrderProductDto>

@{
    ViewData["Title"] = "Order Products";
}

<h1>Order Products</h1>

<table class="table">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Product ID</th>
            <th>Quantity</th>
            <th>Unit Price</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.ProductId</td>
                <td>@item.Quantity</td>
                <td>@item.UnitPrice.ToString("C")</td> <!-- Format as currency -->
            </tr>
        }
    </tbody>
</table>
