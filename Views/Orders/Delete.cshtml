@model SalesOrders.Models.Order

@{
    ViewData["Title"] = "Delete Order";
}

<h1>Delete Order</h1>

<h3>Are you sure you want to delete this order?</h3>

<div>
    <h4>Order Details</h4>
    <dl class="row">
        <dt class="col-sm-2">Customer Name</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>

        <dt class="col-sm-2">Order Date</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>

        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>

        <dt class="col-sm-2">Total Amount</dt>
        <dd class="col-sm-10">@Model.TotalAmount.ToString("C")</dd>
    </dl>

    <form asp-action="DeleteConfirmed" method="post">
        @Html.AntiForgeryToken() <!-- Anti-forgery token for security -->
        <input type="hidden" name="id" value="@Model.Id" />

        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
