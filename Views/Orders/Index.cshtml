@model IEnumerable<SalesOrders.Models.OrdersDto>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Order</a>
</p>

<div class="table-responsive">
    <table class="table">
        <thead>
            <tr>
                <th>Order ID</th>
                <th>Customer Name</th>
                <th>Order Date</th>
                <th>Status</th> <!-- Added Status Column -->
                <th>Total Amount</th> <!-- Assuming you have this -->
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model.Any())
            {
                foreach (var order in Model)
                {
                    <tr>
                        <td>@order.Id</td>
                        <td>@order.CustomerName</td>
                        <td>@order.OrderDate.ToShortDateString()</td>
                        <td>@order.Status</td> <!-- Displaying Status -->
                        <td>@order.TotalAmount.ToString("C")</td> <!-- Formatting currency -->
                        <td>
                            <a asp-action="Edit" asp-route-id="@order.Id" class="btn btn-warning">Edit</a>
                            <a href="javascript:void(0);" onclick="confirmDelete('@order.Id');" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center">No orders available.</td> <!-- Empty state message -->
                </tr>
            }
        </tbody>
    </table>
</div>

<script>
    function confirmDelete(orderId) {
        if (confirm('Are you sure you want to delete this order?')) {
            // Redirect to the delete action
            window.location.href = '@Url.Action("Delete", "Orders")/' + orderId;
        }
    }
</script>
