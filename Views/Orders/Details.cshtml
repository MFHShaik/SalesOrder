@model SalesOrders.Models.OrdersDto

<h1>Order Details</h1>

<div>
    <h3>Order ID: @Model.Id</h3>
    <p>Customer Name: @Model.CustomerName</p>
    <p>Order Date: @Model.OrderDate.ToShortDateString()</p>
    <p>Total Amount: @Model.TotalAmount.ToString("C")</p>
</div>

<h2>Order Products</h2>
<table class="table table-bordered">
    <thead>
        <tr>
            <th>Product Name</th>
            <th>Quantity</th>
            <th>Unit Price (R)</th>
            <th>Total Price (R)</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.OrderProducts)
        {
            <tr>
                <td>@product.ProductName</td> <!-- Assuming ProductName is available -->
                <td>@product.Quantity</td>
                <td>@product.SalesPrice.ToString("C")</td> <!-- Unit Price -->
                <td>@(product.Quantity * product.SalesPrice).ToString("C")</td> <!-- Total Price -->
            </tr>
        }
    </tbody>
</table>

<a asp-action="Index" class="btn btn-secondary">Back to Orders List</a>
